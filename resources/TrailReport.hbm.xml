<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.paulawaite.fbtr.entity.TrailReport" table="trail_report"
           schema="FAT_BIKE_TRAIL_REPORTS">
        <id name="id" type="int" column="id">
            <generator class="native"/>
        </id>
        <property name="dateRidden">
            <column name="date_ridden" sql-type="date" not-null="true"/>
        </property>
        <property name="conditions">
            <column name="conditions" sql-type="varchar(1000)" length="1000"
                    not-null="true"/>
        </property>
        <property name="comments">
            <column name="comments" sql-type="varchar(1000)" length="1000"
                    not-null="true"/>
        </property>
        <property name="createDate">
            <column name="create_date" sql-type="date" />
        </property>

    </class>
</hibernate-mapping>