<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.paulawaite.fbtr.entity.Trail" table="trail"
           schema="FAT_BIKE_TRAIL_REPORTS">
        <id name="id" type="int" column="id">
            <generator class="native"/>
        </id>
        <property name="name">
            <column name="name" sql-type="varchar(50)" length="50"
                    not-null="true"/>
        </property>
        <property name="address">
            <column name="address" sql-type="varchar(50)" length="50"
                    not-null="true"/>
        </property>
        <property name="city">
            <column name="city" sql-type="varchar(35)" length="35"
                    not-null="true"/>
        </property>
        <property name="state">
            <column name="state" sql-type="varchar(2)" length="2"
                    not-null="true"/>
        </property>
        <property name="zip">
            <column name="zip" sql-type="varchar(10)" length="10"
                    not-null="true"/>
        </property>
        <property name="length">
            <column name="length" sql-type="int(11)" not-null="true"/>
        </property>
        <property name="lengthUnits">
            <column name="length_units" sql-type="int(11)" not-null="true"/>
        </property>
        <property name="description">
            <column name="description" sql-type="varchar(1000)" length="1000"
                    not-null="true"/>
        </property>
        <property name="website">
            <column name="website" sql-type="varchar(50)" length="50"
                    not-null="true"/>
        </property>
        <property name="trailMap">
            <column name="trail_map" sql-type="varchar(50)" length="50"
                    not-null="true"/>
        </property>
        <property name="createDate">
            <column name="create_date" sql-type="date" />
        </property>
        <property name="updateDate">
            <column name="update_date" sql-type="date" />
        </property>
    </class>
</hibernate-mapping>